<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenEdit"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreEdit"
        tools:srcCompat="@drawable/default_image" />
    <TextView
            android:text="nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nombreEdit"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="50sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/contadorEdit"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenEdit"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/menos"
        android:layout_width="61dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/contadorEdit"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenEdit"
        app:srcCompat="@drawable/resta" />

    <ImageView
        android:id="@+id/mas"
        android:layout_width="61dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contadorEdit"
        app:layout_constraintTop_toBottomOf="@+id/imagenEdit"
        app:srcCompat="@drawable/suma" />
    <TextView
            android:text="racha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/countEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagenEdit" app:layout_constraintTop_toBottomOf="@+id/nombreEdit"
            android:textSize="50sp" android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/imagenEdit"/>
</androidx.constraintlayout.widget.ConstraintLayout>