<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content" android:padding="20dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/asendente" android:id="@+id/ascendenteArrow"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="Ascendente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ascendente"
            app:layout_constraintStart_toEndOf="@+id/ascendenteArrow" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ascendenteArrow" android:layout_marginStart="25dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/descendente"
            android:id="@+id/descendenteArrow"
            app:layout_constraintTop_toBottomOf="@+id/ascendenteArrow" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"/>
    <TextView
            android:text="Ascendente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/descendente"
            app:layout_constraintTop_toBottomOf="@+id/ascendente"
            app:layout_constraintStart_toEndOf="@+id/descendenteArrow"
            app:layout_constraintBottom_toBottomOf="@+id/descendenteArrow" android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>